{
  "rules": {
    ".read": false,
    ".write": false,
    "discussions": {
      ".read": true,
      ".write": false,
      "$discussion": {
        "commentKeys": {
          ".read": true,
          ".write": "auth != null"
        }
      },
      ".indexOn": ["forumKey"]
    },
    "comments": {
      ".read": true,
      ".write": "auth != null",
      ".indexOn": ["discussionKey"]
    },
    "forums": {
      ".read": true,
      ".write": false
    },
    "administrators": {
      ".read": true,
      ".write": false
    },
    "moderators": {
      ".read": true,
      ".write": false
    }
  }
}
