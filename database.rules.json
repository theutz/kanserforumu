{
  "rules": {
    ".read": false,
    ".write": false,
    "discussions": {
      ".read": true,
      ".write": false,
      "$discussion": {
        "commentKeys": {
          ".read": true,
          // Must be logged in as a moderator or admin
          ".write": "(auth != null) && (!data.exists() || root.child('moderators').hasChild(auth.uid) || root.child('administrators').hasChild(auth.uid) || root.child('comments').child(data).child('userKey').val() === auth.uid)"
        }
      },
      ".indexOn": ["forumKey"]
    },
    "comments": {
      ".read": true,
      ".write": "auth != null",
      ".indexOn": ["discussionKey"]
    },
    "forums": {
      ".read": true,
      ".write": false
    },
    "administrators": {
      ".read": true,
      ".write": false
    },
    "moderators": {
      ".read": true,
      ".write": false
    }
  }
}
