{
  "rules": {
    ".read": false,
    ".write": false,
    "discussions": {
      // everybody
      ".read": true,
      // logged in as moderator/admin
      ".write": "(auth != null) && (!data.exists() || root.child('moderators').hasChild(auth.uid) || root.child('administrators').hasChild(auth.uid))",
      ".indexOn": ["forumKey"],
      "$discussion": {
        // everybody
        ".read": true,
        // logged in as moderator/admin
        ".write": "(auth != null) && (!data.exists() || root.child('moderators').hasChild(auth.uid) || root.child('administrators').hasChild(auth.uid))"
      }
    },
    "comments": {
      // everybody
      ".read": true,
      // logged in as moderator/admin or comment author
      ".write": "(auth != null) && (!data.exists() || root.child('moderators').hasChild(auth.uid) || root.child('administrators').hasChild(auth.uid) || data.child('userKey').val() === auth.uid)",
      "$comment": {
        ".read": true,
        // logged in as moderator/admin or comment author
        ".write": "(auth != null) && (!data.exists() || root.child('moderators').hasChild(auth.uid) || root.child('administrators').hasChild(auth.uid) || data.child('userKey').val() === auth.uid)"
      },
      ".indexOn": ["discussionKey"]
    },
    "forums": {
      ".read": true,
      ".write": false
    },
    "administrators": {
      ".read": true,
      ".write": false
    },
    "moderators": {
      ".read": true,
      ".write": false
    }
  }
}
