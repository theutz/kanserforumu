{
  "rules": {
    ".read": false,
    ".write": false,
    "discussions": {
      ".read": true,
      ".write": false,
      ".indexOn": ["forumKey"]
    },
    "comments": {
      ".read": true,
      ".write": "(auth != null) && (!data.exists() || root.child('moderators').hasChild(auth.uid) || root.child('administrators').hasChild(auth.uid) || data.child('userKey').val() === auth.uid)",
      "$comment": {
        ".read": true,
        ".write": "(auth != null) && (!data.exists() || root.child('moderators').hasChild(auth.uid) || root.child('administrators').hasChild(auth.uid) || data.child('userKey').val() === auth.uid)"
      },
      ".indexOn": ["discussionKey"]
    },
    "forums": {
      ".read": true,
      ".write": false
    },
    "administrators": {
      ".read": true,
      ".write": false
    },
    "moderators": {
      ".read": true,
      ".write": false
    }
  }
}
